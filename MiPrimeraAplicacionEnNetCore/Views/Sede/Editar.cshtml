@using MiPrimeraAplicacionEnNetCore.Clases;
@model SedeCLS;

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar Sede</h1>


<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Guardar" asp-controller="Sede" id="frmEnviar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="iidSede" class="control-label"></label>
                <input asp-for="iidSede" readonly="true" class="form-control" />
                <span asp-validation-for="iidSede" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="nombreSede" class="control-label"></label>
                <input asp-for="nombreSede" class="form-control" />
                <span asp-validation-for="nombreSede" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="direccion" class="control-label"></label>
                <input asp-for="direccion" class="form-control" />
                <span asp-validation-for="direccion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="button" value="Guardar" class="btn btn-primary" onclick="Abrir()"/>
                <a asp-action="Index" class="btn btn-danger">Regresar</a>
            </div>
        </form>
    </div>
</div>

<script src="~/js/generic.js"></script>
<script src="~/js/sweetAlert.js"></script>

<script>
    function Abrir(){
        mostrarModal()
        .then(res=>{
            if(res.value){
                var frmEnviar = document.getElementById("frmEnviar");
                frmEnviar.submit();
            }
        })
    }
</script>