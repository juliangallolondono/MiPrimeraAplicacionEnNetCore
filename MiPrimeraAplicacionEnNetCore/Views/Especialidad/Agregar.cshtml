@using MiPrimeraAplicacionEnNetCore.Clases;
@model EspecialidadCLS;
@{
    ViewData["Title"] = "Agregar";
}

<h1>Crear una Especialidad!</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Guardar" method="post" id="frmEnviar">
            <div class=form-group>
                <label asp-for="nombre"></label>
                <input asp-for="nombre" class="form-check form--control"/>
                <span asp-validation-for="nombre" class="text-danger"></span>
            </div>
            <div class=form-group>
                <label asp-for="description"></label>
                <input asp-for="description" class="form-check form--control"/>
                <span asp-validation-for="description" class="text-danger"></span>
            </div>abrirModal
            <div class=form-group>
                <input type="button" value="Aceptar" onclick="abrirModal()" class="btn btn-primary"/>
                <a asp-action="Index" asp-controller="Especialidad" class="btn btn-danger" >Regresar</a>
            </div>
        </form>
    </div>
</div>abrirModal

<script src="~/js/sweetAlert.js"></script>
<script src="~/js/generic.js"></script>
<script type="text/javascript">
    function abrirModal(){
        mostrarModal().then((result) => {
          if (result.isConfirmed) {
            var frmEnviar = document.getElementById("frmEnviar");
            frmEnviar.submit();
          }
        })
    }
</script>